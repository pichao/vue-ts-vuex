{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "esnext",
    "noImplicitAny": false,
    "outDir": "./build/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "utils": ["/utils/*"],
      "assets": ["/assets/*"],
      "components": ["/components/*"],
      "config": ["/config/*"],
      "pages": ["/pages/*"],
      "store": ["/store/*"],
      "constant": ["/constant/*"]
    }
  },
  "include": ["src/**/*", "@types/**/*"],
  "exclude": ["node_modules"]
}
